    <script>
        // Simple copy functionality for code examples
        document.querySelectorAll('.font-mono').forEach(codeBlock => {
            codeBlock.addEventListener('click', () => {
                const textToCopy = codeBlock.textContent.replace(/\/\*.*\*\//g, '').trim();
                navigator.clipboard.writeText(textToCopy).then(() => {
                    const originalText = codeBlock.textContent;
                    codeBlock.textContent = 'Copied!';
                    setTimeout(() => {
                        codeBlock.textContent = originalText;
                    }, 1000);
                });
            });
        });
    </script>
