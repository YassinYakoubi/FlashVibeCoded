            <div class="bg-gray-800 rounded-lg p-3 text-white mb-2">
                <p class="font-mono text-sm">
                    .duration-75 <span class="text-blue-400">/* transition-duration: 75ms; */</span><br>
                    .duration-150 <span class="text-blue-400">/* transition-duration: 150ms; */</span><br>
                    .duration-300 <span class="text-blue-400">/* transition-duration: 300ms; */</span><br>
                    .duration-500 <span class="text-blue-400">/* transition-duration: 500ms; */</span>
                </p>
            </div>
        </div>

        <!-- Transition Timing Function -->
        <div class="class-card bg-gray-50 p-4 rounded-lg border border-gray-200">
            <h3 class="font-medium mb-2">Transition Timing</h3>
            <p class="text-sm text-gray-600 mb-2">Control the timing function of transitions</p>
            <div class="bg-gray-800 rounded-lg p-3 text-white mb-2">
                <p class="font-mono text-sm">
                    .ease-linear <span class="text-blue-400">/* transition-timing-function: linear; */</span><br>
                    .ease-in <span class="text-blue-400">/* transition-timing-function: cubic-bezier(0.4, 0, 1, 1); */</span><br>
                    .ease-out <span class="text-blue-400">/* transition-timing-function: cubic-bezier(0, 0, 0.2, 1); */</span><br>
                    .ease-in-out <span class="text-blue-400">/* transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1); */</span>
                </p>
            </div>
        </div>

        <!-- Transition Delay -->
